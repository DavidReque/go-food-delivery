{
  "appOptions": {
    "serviceName": "catalogreadservice",
    "deliveryType": "http"
  },
  "grpcOptions": {
    "name": "catalogreadservice",
    "port": ":6004",
    "host": "localhost",
    "development": true
  },
  "echoHttpOptions": {
    "name": "catalogreadservice",
    "port": ":7001",
    "development": true,
    "timeout": 60,
    "basePath": "/api/v1",
    "host": "http://localhost",
    "productsPath": "products",
    "debugHeaders": false,
    "httpClientDebug": false,
    "debugErrorsResponse": false,
    "ignoreLogUrls": ["metrics"],
    "bodyLimit": "10M",
    "readTimeout": "60s",
    "writeTimeout": "60s",
    "maxHeaderBytes": 1048576,
    "enableGzip": false,
    "enableRateLimit": false
  },
  "logOptions": {
    "level": "debug",
    "logType": 0,
    "callerEnabled": false
  },
  "rabbitmqOptions": {
    "autoStart": true,
    "reconnecting": true,
    "rabbitmqHostOptions": {
      "userName": "${RABBITMQ_USERNAME}",
      "password": "${RABBITMQ_PASSWORD}",
      "hostName": "${RABBITMQ_HOST}",
      "port": "${RABBITMQ_PORT}",
      "httpPort": "${RABBITMQ_HTTP_PORT}"
    }
  },
  "redisOptions": {
    "host": "${REDIS_HOST}",
    "port": "${REDIS_PORT}",
    "username": "${REDIS_USERNAME}",
    "password": "${REDIS_PASSWORD}",
    "database": "${REDIS_DATABASE}",
    "poolSize": 300,
    "useCloud": true
  },
  "mongoDbOptions": {
    "host": "localhost",
    "port": 27017,
    "user": "admin",
    "password": "admin",
    "database": "catalogs_read_service",
    "useAuth": false,
    "atlasUri": "${MONGODB_ATLAS_URI}",
    "useAtlas": true,
    "enableTracing": false
  },
  "tracingOptions": {
    "enable": false,
    "serviceName": "catalogs-read-service",
    "instrumentationName": "io.opentelemetry.traces.catalogs-read-service",
    "id": 1,
    "useStdout": false,
    "alwaysOnSampler": false,
    "jaegerExporterOptions": {
      "otlpEndpoint": "localhost:4320",
      "enabled": false
    },
    "tempoExporterOptions": {
      "otlpEndpoint": "localhost:4322",
      "enabled": false
    },
    "zipkinExporterOptions": {
      "url": "http://localhost:9411/api/v2/spans",
      "enabled": false
    },
    "otlpProviders": []
  },
  "metricsOptions": {
    "metricsRoutePath": "/metrics",
    "serviceName": "catalogs-read-service",
    "instrumentationName": "io.opentelemetry.metrics.catalogs-write-service"
  },
  "elasticOptions": {
    "url": "http://localhost:9200",
    "sniff": false,
    "gzip": true,
    "explain": true,
    "fetchSource": true,
    "version": true,
    "pretty": true
  },
  "elasticIndexes": {
    "products": "products"
  }
}
